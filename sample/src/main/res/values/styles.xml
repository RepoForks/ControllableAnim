<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ControlStyle">
        <item name="android:layout_marginLeft">@dimen/control_horiz_margin</item>
        <item name="android:layout_marginRight">@dimen/control_horiz_margin</item>
        <item name="android:layout_marginTop">@dimen/control_vert_margin</item>
        <item name="android:layout_marginBottom">@dimen/control_vert_margin</item>
    </style>

    <style name="AnimationTargetStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
